<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>AdminLTE 3 | Lockscreen</title>

  <!-- Google Font: Source Sans Pro -->
  <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
  <!-- Font Awesome -->
  <link rel="stylesheet" href="/plugins/fontawesome-free/css/all.min.css">
  <!-- Theme style -->
  <link rel="stylesheet" href="/dist/css/adminlte.min.css">
</head>
<body class="hold-transition lockscreen">
<!-- Automatic element centering -->
<div class="lockscreen-wrapper">
  <div class="lockscreen-logo">
    <a href="/index2.html"><b>Admin</b>LTE</a>
  </div>
  <%- include('../components/errors.ejs') %>

  <!-- User name -->
  <div class="lockscreen-name"><%= locals.email ?? locals.old?.email %></div>

  <!-- START LOCK SCREEN ITEM -->
  <div class="lockscreen-item">
    <!-- lockscreen image -->
    
    <!-- /.lockscreen-image -->
    <!-- lockscreen credentials (contains the form) -->
    <form method="POST" action="/auth/login" class="lockscreen-credentials" style="margin: 0;">
      <div class="input-group">
        <input type="password" name="password" value="<%= locals.old?.password ?? ''%>" class="form-control" placeholder="password">
        <input type="hidden" name="email" value="<%= locals.email ?? locals.old?.email %>">
        <input type="hidden" name="guard" value="<%= locals.guard ?? locals.old?.guard %>">
        <div class="input-group-append">
          <button type="button" class="btn">
            <i class="fas fa-arrow-right text-muted"></i>
          </button>
        </div>
      </div>
    </form>
    <!-- /.lockscreen credentials -->

  </div>
  <!-- /.lockscreen-item -->
  <div class="help-block text-center">
    Enter your password to start your session
  </div>
  <div class="text-center">
    <a href="/auth/login/<%= locals.guard ?? locals.old?.guard %>">Or sign in as a different user</a>
  </div>

</div>
<!-- /.center -->

<!-- jQuery -->
<script src="/plugins/jquery/jquery.min.js"></script>
<!-- Bootstrap 4 -->
<script src="/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
</body>
</html>



